<p id="notice"><%= notice %></p>

<h1>Providers</h1>


<%= search_form_for @q do |f| %>

  <%= f.search_field :nombre_or_last_name_or_cedula_cont, placeholder:'Buscar', class:"form-control" %>
<%= link_to "Limpiar", request.path, class: "btn btn-default" %>
  <%= f.submit 'Buscar', class: 'btn btn-primary' %>
<% end %>

<table class="table table-hover">  <thead>
    <thead>
    <tr>
      <th scope="col"><%= sort_link @q, :nombre, "Nombre"%></th>
      <th scope="col"><%= sort_link @q, :last_name, "Apellido"%></th></th>
      <th scope="col"><%= sort_link @q, :cedula, "cedula"%></th></th>
      <th scope="col"><%= sort_link @q, :ruc, "Ruc"%></th></th>
      <th colspan="3"><%= fa_icon "plus-square", class: 'mx-2', size: '1x' %><%= link_to 'Nuevo Proveedor', new_provider_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.nombre %></td>
        <td><%= provider.last_name %></td>
        <td><%= provider.cedula %></td>
        <td><%= provider.ruc %></td>
        <td><%= fa_icon "eye", class: 'mx-2', size: '1x' %><%= link_to 'Mostrar', provider %></td>
        <td><%= fa_icon "pen", class: 'mx-2', size: '1x' %><%= link_to 'Editar', edit_provider_path(provider) %></td>
        <td><%= fa_icon "trash-alt", class: 'mx-2', size: '1x' %><%= link_to 'Eliminar', provider, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination justify-content-center">Mostrar

<%= form_tag providers_path, method: :get, id: 'limit_form', remote: true do %>
   <%= select_tag :limit, options_for_select([5, 10, 15, 20],
      selected: params[:limit] || 10) %>
<% end %>Proveedores por pagina</div>
<nav aria-label="Page navigation example">
<ul class="pagination justify-content-center">
    <%= paginate @providers %>

  </ul>
</nav>
<br>
<script type="text/javascript" >

  $(function(){
    $('#limit').change(
      function() {
       $('#limit_form').submit();
      });
  });

</script>
